<%- include('partials/header') %>

<div class="container">
    <!-- Article Header -->
    <header class="article-header">
        <div>
            <div class="article-category mb-2">
                <a href="/<%= article.article_categoryrowguid ? article.article_categoryrowguid.category_slug : '' %>" class="article-category-link text-red">
                    <%= categoryInfo ? categoryInfo.category_name : (article.article_categoryrowguid ? article.article_categoryrowguid.category_name : 'News') %>
                </a>
                <% if (article.article_subcategoryrowguid) { %>
                    <span class="mx-2">›</span>
                    <a href="/<%= article.article_categoryrowguid ? article.article_categoryrowguid.category_slug : '' %>/<%= article.article_subcategoryrowguid.subcategory_slug %>" class="article-subcategory-link text-gray">
                        <%= article.article_subcategoryrowguid.subcategory_name.charAt(0).toUpperCase() + article.article_subcategoryrowguid.subcategory_name.slice(1) %>
                    </a>
                <% } %>
                <% if (article.article_isopinion) { %>
                    <span class="article-type">• OPINION</span>
                <% } %>
            </div>
            <h1 class="article-title"><%= article.article_headline %></h1>
            <div class="article-meta-large">
                <span class="article-author-large">By <%= article.article_author %></span>
                <span><%= new Date(article.article_publishedat).toLocaleDateString('en-US', { 
                    weekday: 'long', 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                }) %></span>
                <span><%= article.article_readtime %> min read</span>
            </div>
            <p class="article-excerpt-large text-gray">
                <%= article.article_excerpt %>
            </p>
        </div>
    </header>

    <!-- Article Content -->
    <article class="article-content">
        <div>
            <img src="<%= article.article_imageurl %>" alt="<%= article.article_headline %>" class="article-image-large" onerror="this.src='/img/600x300.png'">
            <%- article.article_content %>
            <!-- Article Tags -->
            <% if (article.article_tags && article.article_tags.length > 0) { %>
                <div class="article-tags-section">
                    <h4 class="mb-2 text-dark">Tags:</h4>
                    <div class="article-tags-list d-flex flex-wrap gap-2">
                        <% article.article_tags.forEach(tag => { %>
                            <span class="article-tag">
                                <%= tag %>
                            </span>
                        <% }); %>
                    </div>
                </div>
            <% } %>
        </div>
    </article>

    <!-- Related Articles -->
    <% if (relatedArticles && relatedArticles.length > 0) { %>
        <section class="related-articles">
            <div>
                <h2 class="related-title">Related Articles</h2>
                <div class="related-grid">
                    <% relatedArticles.forEach(article => { %>
                        <article class="article-card">
                            <div class="article-container-text">
                                <div class="article-category">
                                    <%= article.article_categoryrowguid ? article.article_categoryrowguid.category_name.charAt(0).toUpperCase() + article.article_categoryrowguid.category_name.slice(1) : 'News' %>
                                    <% if (article.article_isopinion) { %>
                                        <span class="article-type">• OPINION</span>
                                    <% } %>
                                </div>
                                <h3 class="article-headline">
                                    <a href="/<%= article.article_categoryrowguid ? article.article_categoryrowguid.category_slug : '' %>/<%= new Date(article.article_publishedat).getFullYear() %>/<%= (new Date(article.article_publishedat).getMonth() + 1).toString().padStart(2, '0') %>/<%= new Date(article.article_publishedat).getDate().toString().padStart(2, '0') %>/<%= article.article_slug %>">
                                        <%= article.article_headline %>
                                    </a>
                                </h3>
                                <p class="article-excerpt"><%- article.article_excerpt %></p>
                                <div class="article-meta">
                                    <span class="article-author">By <%= article.article_author %></span>
                                    <span><%= new Date(article.article_publishedat).toLocaleDateString() %></span>
                                    <span><%= article.article_readtime %> min read</span>
                                </div>
                            </div>
                            <div class="article-container-image">
                                <img src="<%= article.article_imageurl %>" alt="<%= article.article_headline %>" class="article-image" onerror="this.src='/img/600x300.png'">
                            </div>
                        </article>
                    <% }); %>
                </div>
            </div>
        </section>
    <% } %>
</div>

<!-- Share and Comments Section -->
<section class="article-share-section bg-light py-4 mt-4">
    <div class="container">
        <div class="article-share-inner mx-auto">
            <!-- Share Buttons -->
            <div class="text-center mb-3">
                <h3 class="mb-2 text-dark">Share this article</h3>
                <div class="d-flex justify-center gap-2">
                    <button class="share-btn-facebook">
                        <i class="fab fa-facebook-f"></i> Facebook
                    </button>
                    <button class="share-btn-twitter">
                        <i class="fab fa-twitter"></i> Twitter
                    </button>
                </div>
            </div>
            
            <!-- Comments Section -->
            <div class="article-comments-section border-top pt-3">
                <h3 class="mb-2 text-dark">Comments</h3>
                <div class="article-comments-box bg-white p-2 rounded border">
                    <p class="text-gray text-center mb-2">
                        Comments are currently disabled. Please check back later.
                    </p>
                    <div class="text-center">
                        <button class="btn btn-red px-3 py-2 rounded">
                            Subscribe to Comments
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') %> 