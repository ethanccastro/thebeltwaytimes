<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- <link rel="stylesheet" href="/css/news.css"> -->
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="dark-theme">
    <!-- Header -->
    <header class="wapo-header">
        <div class="wapo-header-inner">
            <div class="wapo-logo-block">
                <a href="/" class="wapo-logo">The Washington Post</a>
                <div class="wapo-tagline">Democracy Dies in Darkness</div>
            </div>
            <nav class="wapo-nav">
                <ul>
                    <li><a href="/politics">Politics</a></li>
                    <li><a href="/opinions">Opinions</a></li>
                    <li><a href="/style">Style</a></li>
                    <li><a href="/investigations">Investigations</a></li>
                    <li><a href="/climate">Climate</a></li>
                    <li><a href="/well-being">Well+Being</a></li>
                    <li><a href="/business">Business</a></li>
                    <li><a href="/tech">Tech</a></li>
                    <li><a href="/world">World</a></li>
                    <li><a href="/dc-md-va">D.C., Md. & Va.</a></li>
                    <li><a href="/sports">Sports</a></li>
                    <li><a href="/crosswords">Crosswords & Games</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Breaking news banner -->
    <% if (typeof breakingNews !== 'undefined' && breakingNews.length > 0) { %>
        <div class="breaking-news">
            <div class="breaking-news-content">
                <span class="breaking-label">Breaking</span>
                <span><%= breakingNews[0].headline %></span>
            </div>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="main-content">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="wapo-footer">
        <div class="wapo-footer-inner">
            <div class="wapo-footer-section">
                <h3>Sections</h3>
                <ul>
                    <li><a href="/politics">Politics</a></li>
                    <li><a href="/opinions">Opinions</a></li>
                    <li><a href="/business">Business</a></li>
                    <li><a href="/tech">Tech</a></li>
                    <li><a href="/world">World</a></li>
                </ul>
            </div>
            <div class="wapo-footer-section">
                <h3>About</h3>
                <ul>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="#">Contact</a></li>
                    <li><a href="#">Careers</a></li>
                </ul>
            </div>
            <div class="wapo-footer-section">
                <h3>More</h3>
                <ul>
                    <li><a href="/crosswords">Crosswords</a></li>
                    <li><a href="#">Weather</a></li>
                    <li><a href="#">Advertise</a></li>
                </ul>
            </div>
        </div>
        <div class="wapo-footer-bottom">
            <p>&copy; 2025 The Washington Post. All rights reserved.</p>
        </div>
    </footer>

    <!-- Search functionality -->
    <script>
        // Search functionality
        function performSearch() {
            const searchInput = document.getElementById('searchInput');
            const query = searchInput.value.trim();
            
            if (query) {
                window.location.href = `/search?q=${encodeURIComponent(query)}`;
            }
        }

        // Handle search form submission
        document.addEventListener('DOMContentLoaded', function() {
            const searchForm = document.getElementById('searchForm');
            if (searchForm) {
                searchForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    performSearch();
                });
            }

            // Handle search button clicks
            const searchButton = document.getElementById('searchButton');
            if (searchButton) {
                searchButton.addEventListener('click', performSearch);
            }
        });

        // Mobile menu toggle
        function toggleMobileMenu() {
            const navMenu = document.querySelector('.nav-menu');
            navMenu.classList.toggle('mobile-open');
        }
    </script>
</body>
</html> 