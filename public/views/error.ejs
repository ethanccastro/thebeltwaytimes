<%- include('partials/header') %>

<!-- Error Header -->
<header class="search-header">
    <div class="container">
        <div style="text-align: center;">
            <div style="font-size: 64px; color: #ddd; margin-bottom: 20px;">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h1 style="font-size: 36px; margin-bottom: 15px; color: #333;"><%= title %></h1>
            <p style="font-size: 18px; color: #666; max-width: 600px; margin: 0 auto;">
                <%= message %>
            </p>
        </div>
    </div>
</header>

<!-- Error Content -->
<div class="container">
    <div style="text-align: center; padding: 60px 0;">
        <div style="max-width: 600px; margin: 0 auto;">
            <h2 style="font-size: 24px; margin-bottom: 20px; color: #333;">What you can do:</h2>
            
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 30px; margin-bottom: 40px;">
                <div style="background: #f8f9fa; padding: 30px; border-radius: 8px; border: 1px solid #e5e5e5;">
                    <div style="font-size: 36px; color: #dc2626; margin-bottom: 15px;">
                        <i class="fas fa-home"></i>
                    </div>
                    <h3 style="font-size: 18px; margin-bottom: 10px; color: #333;">Go Home</h3>
                    <p style="color: #666; margin-bottom: 15px;">Return to our homepage to browse the latest news.</p>
                    <a href="/" style="background: #dc2626; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px; display: inline-block;">
                        Home Page
                    </a>
                </div>
                
                <div style="background: #f8f9fa; padding: 30px; border-radius: 8px; border: 1px solid #e5e5e5;">
                    <div style="font-size: 36px; color: #dc2626; margin-bottom: 15px;">
                        <i class="fas fa-search"></i>
                    </div>
                    <h3 style="font-size: 18px; margin-bottom: 10px; color: #333;">Search</h3>
                    <p style="color: #666; margin-bottom: 15px;">Search for the content you're looking for.</p>
                    <button onclick="document.getElementById('searchInput').focus()" style="background: #dc2626; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;">
                        Search
                    </button>
                </div>
                
                <div style="background: #f8f9fa; padding: 30px; border-radius: 8px; border: 1px solid #e5e5e5;">
                    <div style="font-size: 36px; color: #dc2626; margin-bottom: 15px;">
                        <i class="fas fa-newspaper"></i>
                    </div>
                    <h3 style="font-size: 18px; margin-bottom: 10px; color: #333;">Browse Categories</h3>
                    <p style="color: #666; margin-bottom: 15px;">Explore our news categories to find interesting content.</p>
                    <a href="/business" style="background: #dc2626; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px; display: inline-block;">
                        Browse News
                    </a>
                </div>
            </div>
            
            <!-- Search Form -->
            <div style="background: white; padding: 30px; border-radius: 8px; border: 1px solid #e5e5e5; margin-bottom: 30px;">
                <h3 style="font-size: 20px; margin-bottom: 20px; color: #333;">Search The News Post</h3>
                <form id="searchForm" class="search-form">
                    <input type="text" id="searchInput" class="search-input" placeholder="Search for news, topics, or authors...">
                    <button type="submit" id="searchButton" class="search-button">
                        <i class="fas fa-search"></i> Search
                    </button>
                </form>
            </div>
            
            <!-- Popular Categories -->
            <div style="background: white; padding: 30px; border-radius: 8px; border: 1px solid #e5e5e5;">
                <h3 style="font-size: 20px; margin-bottom: 20px; color: #333;">Popular Categories</h3>
                <div style="display: flex; justify-content: center; gap: 15px; flex-wrap: wrap;">
                    <a href="/business" style="background: #1e40af; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;">
                        Business
                    </a>
                    <a href="/politics" style="background: #dc2626; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;">
                        Politics
                    </a>
                    <a href="/world" style="background: #059669; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;">
                        World
                    </a>
                    <a href="/technology" style="background: #7c3aed; color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px;">
                        Technology
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 