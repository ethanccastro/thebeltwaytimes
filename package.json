{
  "name": "typescript-project",
  "version": "1.0.0",
  "description": "A TypeScript boilerplate project",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "watch": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "mikro-orm": "mikro-orm",
    "db:create": "mikro-orm schema:create",
    "db:drop": "mikro-orm schema:drop",
    "db:update": "mikro-orm schema:update",
    "db:migrate": "mikro-orm migration:create",
    "db:up": "mikro-orm migration:up",
    "db:down": "mikro-orm migration:down",
    "db:fresh": "mikro-orm schema:fresh"
  },
  "keywords": [
    "typescript",
    "boilerplate"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@mikro-orm/cli": "^6.4.16",
    "@mikro-orm/core": "^6.4.16",
    "@mikro-orm/migrations": "^6.4.16",
    "@mikro-orm/mysql": "^6.4.16",
    "@mikro-orm/reflection": "^6.4.16",
    "@types/uuid": "^10.0.0",
    "dotenv": "^17.0.0",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "mysql2": "^3.14.1",
    "uuid": "^11.1.0",
    "hugerte": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
